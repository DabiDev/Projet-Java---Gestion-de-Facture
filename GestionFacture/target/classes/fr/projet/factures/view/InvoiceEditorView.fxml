<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.projet.factures.controller.InvoiceEditorController" prefWidth="800" prefHeight="600">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <top>
        <VBox spacing="20">
            <Label text="Nouvelle Facture" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <GridPane hgap="10" vgap="10">
                <Label text="Client:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <ComboBox fx:id="clientCombo" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </GridPane>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding><Insets top="20" bottom="20"/></padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Ajouter Produit:" />
                <ComboBox fx:id="productCombo" prefWidth="200" promptText="Sélectionner un produit..."/>
                <Button text="Ajouter" onAction="#handleAjouterProduitSelectionne">
                    <graphic><FontIcon iconLiteral="fas-plus"/></graphic>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Ajouter Ligne Vide" onAction="#handleAjouterLigne">
                    <graphic><FontIcon iconLiteral="fas-plus-circle"/></graphic>
                </Button>
            </HBox>
            
            <TableView fx:id="linesTable" VBox.vgrow="ALWAYS" editable="true">
                <columns>
                    <TableColumn fx:id="descCol" text="Description" prefWidth="300"/>
                    <TableColumn fx:id="qtyCol" text="Quantité" prefWidth="100"/>
                    <TableColumn fx:id="priceCol" text="Prix Unitaire (€)" prefWidth="150"/>
                    <TableColumn fx:id="totalLineCol" text="Total Ligne" prefWidth="150"/>
                    <TableColumn fx:id="actionCol" text="" prefWidth="50" sortable="false"/>
                </columns>
                <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="20" alignment="CENTER_RIGHT">
            <Label text="Total General:" style="-fx-font-size: 16;"/>
            <Label fx:id="totalLabel" text="0.00 €" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            
            <Button text="Annuler" onAction="#handleAnnuler"/>
            <Button text="Enregistrer Facture" onAction="#handleEnregistrer" styleClass="accent"/>
        </HBox>
    </bottom>
</BorderPane>
