<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="fr.projet.factures.controller.FactureController" spacing="20">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
    
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Factures" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        
        <javafx.scene.layout.Region HBox.hgrow="ALWAYS" />
        
        <javafx.scene.control.TextField fx:id="searchField" promptText="Rechercher (Client, N°)" prefWidth="200"/>
        <javafx.scene.control.ComboBox fx:id="statutFilter" prefWidth="150" promptText="Tous les statuts"/>
        
        <Button text="Nouvelle Facture" onAction="#handleNouvelleFacture" styleClass="accent">
            <graphic><FontIcon iconLiteral="fas-plus"/></graphic>
        </Button>
        <Button text="Exporter PDF" onAction="#handleExportPdf">
            <graphic><FontIcon iconLiteral="fas-file-pdf"/></graphic>
        </Button>
    </HBox>
    
    <TableView fx:id="factureTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="numeroCol" text="Numéro" prefWidth="150"/>
            <TableColumn fx:id="dateCol" text="Date" prefWidth="150"/>
            <TableColumn fx:id="clientCol" text="Client" prefWidth="250"/>
            <TableColumn fx:id="totalCol" text="Total" prefWidth="150"/>
            <TableColumn fx:id="statutCol" text="Statut" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
             <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox>
